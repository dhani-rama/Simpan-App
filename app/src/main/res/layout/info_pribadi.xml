<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_info_pribadi"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_info_pribadi"
        app:layout_constraintBottom_toTopOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_60ssp"
        android:paddingLeft="@dimen/_20ssp"
        android:paddingRight="@dimen/_20ssp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp">

                    <Button
                        android:id="@+id/btn_bio"
                        android:layout_width="150dp"
                        android:layout_height="178dp"
                        android:background="@drawable/btn_biodata"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingLeft="@dimen/_10ssp">

                    <Button
                        android:id="@+id/btn_tunkin"
                        android:layout_width="150dp"
                        android:layout_height="178dp"
                        android:background="@drawable/btn_tunkin"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp">

                    <Button
                        android:id="@+id/btn_rekap"
                        android:layout_width="150dp"
                        android:layout_height="178dp"
                        android:background="@drawable/btn_penugasan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingLeft="@dimen/_10ssp">

                    <Button
                        android:id="@+id/btn_kehadiran"
                        android:layout_width="150dp"
                        android:layout_height="178dp"
                        android:background="@drawable/btn_kehadiran" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp">

                    <Button
                        android:id="@+id/btn_pp53"
                        android:layout_width="150dp"
                        android:layout_height="178dp"
                        android:background="@drawable/btn_disiplin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingLeft="@dimen/_10ssp">

                    <Button
                        android:id="@+id/btn_umak"
                        android:layout_width="150dp"
                        android:layout_height="178dp"
                        android:background="@drawable/btn_umak" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10ssp"
                android:paddingRight="@dimen/_10ssp">

                <Button
                    android:id="@+id/btn_ubahpas"
                    android:layout_width="150dp"
                    android:layout_height="178dp"
                    android:background="@drawable/btn_ubahpass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20ssp"
                android:paddingLeft="@dimen/_5ssp">

                <Button
                    android:id="@+id/kosong"
                    android:layout_width="150dp"
                    android:layout_height="178dp"
                    android:background="@android:color/transparent"
                    tools:ignore="InvalidId" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:background="@drawable/btn_back_baru"
        android:paddingLeft="@dimen/_2ssp"
        android:paddingTop="@dimen/_2ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

</androidx.constraintlayout.widget.ConstraintLayout>